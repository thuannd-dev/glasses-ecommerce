//Debug for DotRush
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API Debug (DotRush)",
      "type": "coreclr",
      "request": "launch",
      "program": "${command:dotrush.activeTargetPath}",
      "preLaunchTask": "dotrush: Build",
      "cwd": "${workspaceFolder}/API",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
